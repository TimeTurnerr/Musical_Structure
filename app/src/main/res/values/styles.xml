<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlayerActivityTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#616161</item>
        <item name="colorPrimary">#616161</item>
        android:elevation="0dp"
    </style>

    <style name="homeicon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="hometext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="homearrow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="musicbarimage">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="musicbartext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
