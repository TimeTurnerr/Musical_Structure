<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.desmond.musicalstructure">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".my_music"
            android:label="Library"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity"
            android:persistent="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".player"
            android:label="Player"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity"
            android:persistent="true"
            android:screenOrientation="portrait"
            android:theme="@style/PlayerActivityTheme" />
        <activity
            android:name=".online"
            android:label="Online Music"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity"
            android:persistent="true"
            android:screenOrientation="portrait" />
        <activity android:name=".song" />
        <activity android:name=".SongAdapter" />
        <activity android:name=".songdeatils"></activity>
    </application>

</manifest>